<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".MainActivity">
    <include
        android:id="@+id/in_home"
        layout="@layout/layout_home" />
    <include
        android:id="@+id/in_list"
        layout="@layout/layout_list" />
    <include
        android:id="@+id/in_setting"
        layout="@layout/layout_pro" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/img_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingVertical="21dp"
            android:src="@drawable/ic_home_1" />

        <ImageView
            android:id="@+id/img_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingVertical="21dp"
            android:src="@drawable/ic_list_2" />

        <ImageView
            android:id="@+id/img_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingVertical="21dp"
            android:src="@drawable/ic_setting_2" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>